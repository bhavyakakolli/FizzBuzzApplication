
@{
   ViewBag.Title = "Index";
}
@model IEnumerable<FizzBuzzApplication.Models.FizzBuzzResult>

   <h2>FizzBuzz</h2>
   <pre>
      Web Application in C# that accepts array of values and display output based on below inputs
      1. If the value is a multiple of 3 then output the word "Fizz"
      2. If the value is a multiple of 5 then output the word "Buzz"
      3. If the value is divisible by both 3 and 5 then output the word "FizzBuzz"
      4. If the value is empty or character, then output the word "Invalid Item"
   </pre>
   <table border="1">
      <tr>
         <th>Input</th>
         <th>Output</th>
      </tr>
      @foreach (var item in Model)
      {  
         if (item.multiOutput == null)
         {
            <tr>
               <td>@item.input</td>
               <td>@item.output</td>
            </tr>
         }
         else
         {
            <tr>
               <td  rowspan="2">@item.input</td>
               <td >@item.multiOutput[0]</td>
               </tr>
               <tr>
               <td>@item.multiOutput[1]</td>
            </tr>
            }
         }
      </table>
